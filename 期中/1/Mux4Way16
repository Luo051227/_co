CHIP Mux4Way16 {
    IN a[16], b[16], c[16], d[16], sel[2];
    OUT out[16];

    PARTS:
    Mux16(a=a, b=b, sel=sel[0], out=ab);
    Mux16(a=c, b=d, sel=sel[0], out=cd);
    Mux16(a=ab, b=cd, sel=sel[1], out=out);
}
//(4選1選擇器)
//有 a, b, c, d 四個輸入，根據 sel[2] (2個 bit) 選擇其中一個
//sel 有兩個 bit，例如 sel[0] 和 sel[1]
//sel[0]初選
//用一個 Mux16 從 (a, b) 選出優勝者 AB
//用一個 Mux16 從 (c, d) 選出優勝者 CD
//sel[1]進行最終選擇
//用一個 Mux16 從 (AB, CD) 選出最終輸出
